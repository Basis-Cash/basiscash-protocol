    "deploy:rinkeby": "truffle migrate --network rinkeby",
    "deploy:mainnet": "truffle migrate --network mainnet",
    "deploy:huobitest": "truffle migrate --network huobitest --skip-dry-run",
    "deploy:heco": "truffle migrate --network heco --skip-dry-run"
  },
